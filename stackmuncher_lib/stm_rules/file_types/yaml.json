{
  "$schema": "https://raw.githubusercontent.com/stackmuncher/stm_app/master/stackmuncher_lib/stm_rules/schemas/file-type.json",
  "line_endings": "unix",
  "matches": [
    {
      "muncher": "cicd.appveyor.yml",
      "in_path": [
        "(?i)appveyor\\.yaml$"
      ]
    },
    {
      "muncher": "cicd.circleci.yml",
      "in_path": [
        "(?i)circle\\.yaml$"
      ]
    },
    {
      "muncher": "cicd.codecov.yml",
      "in_path": [
        "(?i)codecov\\.yaml$"
      ]
    },
    {
      "muncher": "cicd.travis.yml",
      "in_path": [
        "(?i)travis\\.yaml$"
      ]
    },
    {
      "muncher": "cicd.github.yml",
      "in_path": [
        "(?i)\\.github/workflows/.+\\.yaml$"
      ]
    },
    {
      "muncher": "docker.yml",
      "in_path": [
        "(?i)docker-compose(?:\\.[[[:alnum:]]\\-_]+)*\\.yaml$"
      ]
    }
  ]
}