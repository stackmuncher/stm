{
  "$schema": "https://raw.githubusercontent.com/stackmuncher/stm_app/master/stackmuncher_lib/stm_rules/schemas/muncher.json",
  "line_endings": "unix",
  "language": "C++",
  "bracket_only": [
    "^[[:blank:]]*[{}\\[\\]\\(\\)][[:blank:];,)]*$",
    "^[[:blank:]]*//[[:blank:]]*.{0,5}$"
  ],
  "line_comments": [
    "^[[:blank:]]*//[:blank:]*.{5,}"
  ],
  "inline_comments": [
    "[^[:space:]]+[[:blank:]]*//.{5,}"
  ],
  "block_comments_start": [
    "^[[:blank:]]*/\\*"
  ],
  "block_comments_end": [
    "\\*/[[:blank:]]*$"
  ]
}